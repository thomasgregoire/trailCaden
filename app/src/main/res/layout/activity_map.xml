<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminMainll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Le trail de Caden propose les parcours suivants :"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button10km"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
            android:onClick="button10km"
            android:text="10 km" />

        <Button
            android:id="@+id/button8km"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
            android:onClick="button8km"
            android:text="8 km" />
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.thomas.trailcaden.map.MapActivity" />

</LinearLayout>